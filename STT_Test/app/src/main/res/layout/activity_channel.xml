<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5BFC9"
    tools:context="com.example.kimminyoung.stt_test.ChannelActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:onClick="onClick"
            android:text="뒤로" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290sp"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음성 인식된 메시지가 나타납니다"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSend"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="30sp"
            android:onClick="onClick"
            android:text="전송"
            android:background="#1F3CA4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:onClick="onClick"
            android:src="@drawable/recordbutton" />

        <Button
            android:id="@+id/btnReRecord"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="50sp"
            android:onClick="onClick"
            android:text="재녹음"
            android:background="#DA6F0B"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
